<!DOCTYPE html>
<html>
<head>
  <title>NslijApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>NS LIJ APP!</h1>
  <% if current_user %>
    <p>Signed in as <%= current_user.username.capitalize %></p>
    <p><%= link_to 'Sign out', logout_path%></p>
  <% else %>
    <div class="login">
      <h2>Login</h2>

      <%= form_tag sessions_path do %>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
        <br>

        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <br>

        <%= submit_tag 'Log In' %>
      <% end %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
